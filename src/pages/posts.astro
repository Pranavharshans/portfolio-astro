---
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";

const posts = [
  {
    title: "Introducing Notorium: AI-Powered Study Notes Revolution",
    description: "A deep dive into building an AI assistant that transforms lecture transcriptions into structured study notes using Next.js, Whisper, and Gemini.",
    date: "May 11 2025"
  },
  {
    title: "Building PaperCast-AI: Transforming Research Papers into Podcasts",
    description: "A technical deep dive into creating an AI system that converts academic papers into natural conversations using Gemini AI and Kokoro TTS.",
    date: "February 25 2025"
  },
  {
    title: "AutoScribe: Multi-Agent Content Creation with Mistral AI",
    description: "How I built an AI content creation system using multiple specialized agents for research, writing, and editing, powered by Mistral AI.",
    date: "February 11 2025"
  },
  {
    title: "Fine-tuning LLaMA 3.2 for Enhanced Reasoning with Unsloth",
    description: "Exploring the process of optimizing LLaMA 3.2 (3B) model for mathematical and logical reasoning using GSM8K dataset and Unsloth optimization.",
    date: "October 19 2024"
  },
  {
    title: "VirtualCalC: Touch-Free Computing with Gesture Recognition",
    description: "Building a virtual calculator that uses webcam-based gesture recognition and Gemini API for touch-free arithmetic operations.",
    date: "September 2 2024"
  },
  {
    title: "CookSnap: AI-Powered Recipe Generation from Ingredient Photos",
    description: "How I built an AI system that uses Gemini Pro Vision to analyze food ingredients and generate personalized recipes.",
    date: "August 15 2024"
  }
];
---

<Layout title="My Writing">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="My Writing"
      description="Sharing insights and experiences from my journey in AI development, including project deep-dives and technical discussions."
    />
    <div class="mt-12 space-y-6">
      {posts.map((post) => (
        <div class="relative border border-transparent border-dashed p-7 group rounded-2xl">
          <div class="absolute inset-0 z-20 w-full h-full duration-300 ease-out bg-white border border-dashed dark:bg-neutral-950 rounded-2xl border-neutral-300 dark:border-neutral-600" />
          <div class="absolute inset-0 z-10 w-full h-full duration-300 ease-out border border-dashed rounded-2xl border-neutral-300 dark:border-neutral-600" />
          <div class="relative z-30">
            <h2 class="text-base font-bold leading-tight tracking-tight sm:text-lg dark:text-neutral-100 mb-3">
              {post.title}
            </h2>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {post.description}
            </p>
            <div class="mt-2.5 text-xs font-medium text-neutral-800 dark:text-neutral-300">
              Posted on {post.date}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>
