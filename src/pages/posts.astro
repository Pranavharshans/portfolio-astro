---
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";

const posts = [
  {
    title: "Notorium: AI-Powered Study Notes Revolution",
    description: "Developed an AI note-taking app using Next.js, Whisper (via Groq), and Gemini API. Built the full tech stack with Firebase integration, focusing on secure authentication and real-time data syncing. Currently in closed beta with active user feedback implementation.",
    date: "May 11 2025"
  },
  {
    title: "PaperCast-AI: Research Papers to Podcast Conversations",
    description: "Built an AI system using Google's Gemini AI for technical content conversion, implemented PDF processing for research papers, and integrated Kokoro TTS for natural voice synthesis. Features dynamic content scaling and multi-voice simulation with AI-generated hosts.",
    date: "February 25 2025"
  },
  {
    title: "AutoScribe: Multi-Agent AI Content Creation",
    description: "Developed a multi-agent system using Planner, Writer, and Editor agents powered by Mistral-small API. Implemented automated research and writing pipeline with SEO optimization. Built an interactive CLI workflow for topic input and markdown output generation.",
    date: "February 11 2025"
  },
  {
    title: "Fine-tuning LLaMA 3.2 for Mathematical Reasoning",
    description: "Fine-tuned LLaMA 3.2 (3B) model on GSM8K dataset for enhanced mathematical and logical reasoning. Leveraged Unsloth for efficient fine-tuning and faster inference, achieving superior performance in complex problem-solving tasks.",
    date: "October 19 2024"
  },
  {
    title: "VirtualCalC: Gesture-Based Calculator",
    description: "Created a hand gesture-based calculator using computer vision for finger movement tracking and Gemini API for real-time computations. Implemented touch-free interaction system with live display updates and intuitive gesture recognition.",
    date: "September 2 2024"
  },
  {
    title: "CookSnap: AI Recipe Generation from Images",
    description: "Built an AI-powered recipe generator using Gemini Pro Vision for ingredient recognition from images. Integrated Google GenerativeAI API for personalized cooking instructions and implemented natural language understanding for detailed recipe steps.",
    date: "August 15 2024"
  }
];
---

<Layout title="My Writing">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="My Writing"
      description="Technical deep-dives into my AI and machine learning projects, focusing on implementation details and development insights."
    />
    <div class="mt-12 space-y-6">
      {posts.map((post) => (
        <div class="relative border border-transparent border-dashed p-7 group rounded-2xl">
          <div class="absolute inset-0 z-20 w-full h-full duration-300 ease-out bg-white border border-dashed dark:bg-neutral-950 rounded-2xl border-neutral-300 dark:border-neutral-600" />
          <div class="absolute inset-0 z-10 w-full h-full duration-300 ease-out border border-dashed rounded-2xl border-neutral-300 dark:border-neutral-600" />
          <div class="relative z-30">
            <h2 class="text-base font-bold leading-tight tracking-tight sm:text-lg dark:text-neutral-100 mb-3">
              {post.title}
            </h2>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {post.description}
            </p>
            <div class="mt-2.5 text-xs font-medium text-neutral-800 dark:text-neutral-300">
              Posted on {post.date}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>
