---
import projects from "../collections/projects.json";
import PageHeading from "../components/page-heading.astro";
import GridProject from "../components/grid-project.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="My Projects">
  <section class="relative z-20 max-w-6xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Products"
      description="Innovative solutions I've built and launched."
    />

    <div class="mt-8 bg-neutral-50 dark:bg-neutral-900 rounded-xl p-6 relative group hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors duration-300">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100">Notorium</h2>
        <a href="https://notorium.app" target="_blank" class="text-neutral-500 hover:text-neutral-700 dark:hover:text-neutral-300 flex items-center">
          notorium.app
          <svg class="w-4 h-4 ml-1 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
      <p class="text-neutral-600 dark:text-neutral-400 mb-4">Founder & Solo Developer</p>
      <ul class="list-disc list-inside space-y-2 text-neutral-600 dark:text-neutral-400 mb-4">
        <li>Developed Notorium, an AI-powered app that helps university students transcribe lectures and generate structured study notes.</li>
        <li>Built the full tech stack using Next.js, Whisper (via Groq), Gemini API, and Firebase.</li>
        <li>Managing UI/UX design, AI integration, authentication, testing, and user feedback implementation.</li>
        <li>Currently in closed beta, refining features based on user insights.</li>
      </ul>
      <div class="mt-4 pt-4 border-t border-neutral-200 dark:border-neutral-700">
        <span class="text-sm text-neutral-500 dark:text-neutral-500">08/01/2025 â€“ Current</span>
      </div>
    </div>

    <div class="mt-16">
      <PageHeading
        title="Projects"
        description="Welcome to my project portfolio, showcasing both completed and ongoing endeavors in artificial intelligence and machine learning. Here you'll find a curated collection of my work, ranging from innovative AI solutions to cutting-edge research implementations."
      />

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-12">
        {
          projects.map((project, index) => {
            const isLlamaProject = project.name === "Llama 3.2 Fine-tuning (Reasoning)";
            return (
              <GridProject
                name={project.name}
                description={project.description}
                url={isLlamaProject ? undefined : project.url}
                number={index + 1}
                features={project.features}
                date={project.date}
                showArrow={true}
              />
            );
          })
        }
      </div>
    </div>
  </section>
</Layout>
